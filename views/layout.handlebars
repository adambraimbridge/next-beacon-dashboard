                    <li><a href="#">Morning</a></li>
                    <li><a href="#">Lunch</a></li>
                    <li><a href="#">Evening</a></li>
                </ul>
            </div>
            
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    Device <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Mobile</a></li>
                    <li><a href="#">Desktop</a></li>
                </ul>
            </div>
            
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                     Page type <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Frontpage</a></li>
                    <li><a href="#">Articles</a></li>
                    <li><a href="#">Streams</a></li>
                </ul>
            </div>

        </div>
    
        <section class="feature__container">
            <h1 class="feature__name">{{ title }}</h1>
            <h2 class="subtitle">Purpose</h2>
            <p>
                {{#if navigation}}{{> about/navigation}}{{/if}}
            </p>
        </section>
        
        <div class="data__container">

            <section class="stats__container" id="c">
                {{#if navigation}}{{> navigation}}{{/if}}
            </section>
            
            <section class="stats__container">
                <h2 class="subtitle">Qualitative research</h2>
                <p>
                    ...
